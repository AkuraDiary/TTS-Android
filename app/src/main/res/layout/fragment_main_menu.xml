<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_start">

    <LinearLayout
            android:id="@+id/lin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_centerVertical="true">

        <ImageButton
                android:id="@+id/btn_mulai"
                android:layout_width="@dimen/sizeWidthBtnLarge"
                android:layout_height="@dimen/sizeHeightBtnLarge"
                android:background="@drawable/btn_play_selector"
                android:layout_margin="5dp"
                android:text="Mulai"
                android:textSize="@dimen/sizeTvLarge"
                android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="3dp"
            android:textSize="@dimen/sizeTvMini"
            android:textColor="#d2d2d2"
            android:text="@string/jumbox_studios"/>

</RelativeLayout>
